extends ../layout

block content
  h1 New Poem
  h3 Create a new poem
  form(action="/poems", method="post")
    input(type="text", name="name", placeholder="Poem Name", size=50)
    p
      input.poetsearch.typeahead(type="text", placeholder="Add other poets")
      ul.poets
        li.poet= user.username
          input(type="hidden", name="poets", value="#{user.id}")
    input(type="submit", value="Start Poem")

  script(src="/js/vendor/jquery-1.10.2.min.js")
  script(src="/js/vendor/typeahead.min.js")
  script(src="/js/poems/new.js")
