extends ../layout

block content
  .column.medium-6
    h1 New Poem
    p Create a new poem
    form(action="/poems", method="post")
      input(type="text", name="name", placeholder="Poem Name", size=50, maxlength="100" required)
      div Poets in this poem:
      .row
        .column.medium-4
          .poet-list
            include ../partials/poets
      input.poet-search.typeahead(type="text", placeholder="Add other poets")
      hr
      input.button(type="submit", value="Start Poem")

  script(src="/js/vendor/typeahead.min.js")
  script(src="/js/poems/new.js")
