extends layout

block content
  .column
    h1 #{title} Registration
    form#register(method="post", action="/register")
      #errors
      if errors
        each error in errors
          .error= error
      p
        div
          input(type="text", name="username", placeholder="User name", value=user.username)
        div
          input(type="text", name="email", placeholder="Email", value=user.email)
      p
        div
          input(type="password", name="password", placeholder="Password")
        div
          input(type="password", name="confirm", placeholder="Confirm Password")
        input(type="hidden", name="hashedPassword")

      input.button(type="submit", value="Sign Up")

  script(src="/js/vendor/jquery-1.10.2.min.js")
  script(src="/js/vendor/sha256.js")
  script(src="/js/register.js")
