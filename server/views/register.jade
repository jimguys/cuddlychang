extends layout

block content
  .column
    h1 #{title} Registration
    form#register(method="post", action="/register")
      #errors
        include partials/errors
      p
        div
          input(type="text", name="username", placeholder="User name", value=user.username, required, maxlength="50")
        div
          input(type="text", name="email", placeholder="Email", value=user.email, required, maxlength="100")
      p
        div
          input(type="password", name="password", placeholder="Password", required)
        div
          input(type="password", name="confirm", placeholder="Confirm Password", required)

      input.button(type="submit", value="Sign Up")

  script(src="/js/vendor/jquery-1.10.2.min.js")
  script(src="/js/partials.js")
  script(src="/js/register.js")
