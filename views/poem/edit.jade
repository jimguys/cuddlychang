extends ../layout

block content
  h1= poem.name
  #poem(data-poem-id="#{poem.id}")
    form.newline-form(action="javascript:void(0)", data-poet-id="#{user.id}")
      input.line-text(type="text", size=100)
      input(type="submit", value="Post")
    each line in lines
      .line= line.text

  script(src="/socket.io/socket.io.js")
  script(src="/js/vendor/jquery-1.10.2.min.js")
  script(src="/js/poem/edit.js")
