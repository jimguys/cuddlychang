extends ../layout

block content
  h1= poem.name
  .poem
    each line in lines
      .line= line.text
    form.newline-form(action="javascript:void(0)")
      input.newline(type="text", size=100)
      input(type="submit", value="Post")

  script(src="/socket.io/socket.io.js")
  script(src="/js/vendor/jquery-1.10.2.min.js")
  script(src="/js/client.js")
